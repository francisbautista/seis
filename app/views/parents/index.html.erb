<div class="panel panel-success">
    <div class="panel-heading">
        <h2 class="panel-title"><h3>Parents</h3></h2>
    </div>
    <div class="panel-body">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>First name</th>
              <th>Middle name</th>
              <th>Last name</th>
              <th>Relation</th>
              <th>Email</th>
              <th>Landline</th>
              <th>Mobile</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @parents.each do |parent| %>
              <tr>
                <td><%= parent.first_name %></td>
                <td><%= parent.middle_name %></td>
                <td><%= parent.last_name %></td>
                <td><%= parent.relation %></td>
                <td><%= parent.email %></td>
                <td><%= parent.landline %></td>
                <td><%= parent.mobile %></td>
                <td>
                        <div class="btn-group-sm" role="group" aria-label="..."><%= link_to "Show", parent, :id => "open-contacts-dialog-btn",
      :class => "btn btn-info", :type => "button", :method => :get %>
                      <%= link_to "Edit", edit_parent_path(parent), :id => "open-contacts-dialog-btn",
                :class => "btn btn-warning",:type => "button", :method => :get %>
                <%= link_to "Delete", parent, :id => "open-contacts-dialog-btn",
                :class => "btn btn-danger",:type => "button",method:  :delete, data: { confirm: 'Are you sure?' }%></div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
  </div>
</div>

<%= link_to 'New Parent', new_parent_path, :class=>"btn btn-small btn-success" %>
