<div class="panel panel-success">
    <div class="panel-heading">
        <h2 class="panel-title"><h3>Parents</h3></h2>
    </div>
    <div class="panel-body">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>First name</th>
              <th>Middle name</th>
              <th>Last name</th>
              <th>Relation</th>
              <th>Birthdate</th>
              <th>Occupation</th>
              <th>Email</th>
              <th>Landline</th>
              <th>Mobile</th>
              <th>Street</th>
              <th>Barangay</th>
              <th>City</th>
              <th>Country</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @parents.each do |parent| %>
              <tr>
                <td><%= parent.first_name %></td>
                <td><%= parent.middle_name %></td>
                <td><%= parent.last_name %></td>
                <td><%= parent.relation %></td>
                <td><%= parent.birthdate %></td>
                <td><%= parent.occupation %></td>
                <td><%= parent.email %></td>
                <td><%= parent.landline %></td>
                <td><%= parent.mobile %></td>
                <td><%= parent.street %></td>
                <td><%= parent.barangay %></td>
                <td><%= parent.city %></td>
                <td><%= parent.country %></td>
                <td><%= link_to 'Show', parent %></td>
                <td><%= link_to 'Edit', edit_parent_path(parent) %></td>
                <td><%= link_to 'Destroy', parent, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
  </div>
</div>

<%= link_to 'New Parent', new_parent_path, :class=>"btn btn-small btn-success" %>
