<div class="panel panel-success">

    <div class="panel-heading">
        <h2 class="panel-title"><h3>LIST OF STUDENT REQUIREMENTS</h3></h2>
    </div>
    <div class="panel-body">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Student</th>
              <th>Requirement</th>
              <th>Status</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @student_requirements.each do |student_requirement| %>
              <tr>
                <td><%= Student.find(student_requirement.student_id).first_name %>
                    <%= Student.find(student_requirement.student_id).last_name %></td>
                <td><%= Requirement.find(student_requirement.requirement_id).label %></td>
                <td><%= student_requirement.status %></td>
                <td>
                        <div class="btn-group-sm" role="group" aria-label="..."><%= link_to "Show", student_requirement, :id => "open-contacts-dialog-btn",
      :class => "btn btn-info", :type => "button", :method => :get %>
                      <%= link_to "Edit", edit_student_requirement_path(student_requirement), :id => "open-contacts-dialog-btn",
                :class => "btn btn-warning",:type => "button", :method => :get %>
                <%= link_to "Delete", student_requirement, :id => "open-contacts-dialog-btn",
                :class => "btn btn-danger",:type => "button",method:  :delete, data: { confirm: 'Are you sure?' }%></div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

<%= link_to 'New Student Requirement', new_student_requirement_path, :class=>"btn btn-small btn-success" %>
