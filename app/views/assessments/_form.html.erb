<%= simple_form_for([@student, @assessment]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :installment, as: :select, :collection => ['Annual','Semi-Annual','Quarterly','Monthly'] %>
    <%= f.input :mode, as: :select, :collection => ['Cash', 'Check'] %>
    <!-- <%= f.input :tuition %> -->
    <!-- <%= f.input :discount %> -->
    <%= f.input :discount_desc %>
    <%= f.input :installment_number %>
    <%= f.input :or_number %>
    <%= f.input :student_id %>
    <hr>
    <%= f.input :paid_status %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
