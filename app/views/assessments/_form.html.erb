<%= simple_form_for(@assessment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :installment %>
    <%= f.input :mode %>
    <%= f.input :tuition %>
    <%= f.input :discount %>
    <%= f.input :discount_desc %>
    <%= f.input :installment_number %>
    <%= f.input :or_number %>
    <%= f.input :student_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
