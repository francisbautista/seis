<h1>Listing assessments</h1>

<table>
  <thead>
    <tr>
      <th>Installment</th>
      <th>Mode</th>
      <th>Installment number</th>
      <th>Or number</th>
      <th>Student</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assessments.each do |assessment| %>
      <tr>
        <td><%= assessment.installment %></td>
        <td><%= assessment.mode %></td>
        <td><%= assessment.installment_number %></td>
        <td><%= assessment.or_number %></td>
        <td><%= assessment.student_id %></td>
        <td><%= link_to 'Show', student_assessment_path(@student, assessment) %></td>
        <td><%= link_to 'Edit', edit_student_assessment_path(@student, assessment) %></td>
        <td><%= link_to 'Delete', student_assessment_path(@student, assessment)%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Assessment', new_student_assessment_path %>
