 <%= form_tag students_path, :method => :get do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>
<div class="pull-right">

</div>
<div class="panel panel-success">

    <div class="panel-heading">
        <h2 class="panel-title"><h3>Assessments List</h3></h2>
    </div>
    <div class="panel-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Student ID</th>
                    <th>OR Number</th>
                    <th>Type of Payment</th>
                      <th>Mode of Payment</th>
                      <th>Installment Number</th>
                      <th colspan="3"></th>

                </tr>
            </thead>
            <tbody>
                <% @assessments.each do |assessment| %>
                <tr>
                    <td><%= assessment.student_id %></td>
                    <td><%= assessment.or_number %></td>
                    <td><%= assessment.installment %></td>
                    <td><%= assessment.mode %></td>
                    <td><%= assessment.installment_number %></td>
                    
                    
                    <td>
                        <div class="btn-group-sm" role="group" aria-label="..."><%= link_to "Show", student_assessment_path(@student, assessment), :id => "open-contacts-dialog-btn",
      :class => "btn btn-info", :type => "button", :method => :get %>
                      <%= link_to "Edit", edit_student_assessment_path(@student, assessment), :id => "open-contacts-dialog-btn",
                :class => "btn btn-warning",:type => "button", :method => :get %>
                <%= link_to "Delete", student_assessment_path(@student, assessment), :id => "open-contacts-dialog-btn",
                :class => "btn btn-danger",:type => "button",method:  :delete, data: { confirm: 'Are you sure?' }%>

            </div>
                    </tr>
                    <% end %>
                </tbody>
            </table>

    </div>

</div>

<br>

<%= link_to 'New Assessment', new_student_assessment_path, :class=>"btn btn-small btn-success" %>
<br>
