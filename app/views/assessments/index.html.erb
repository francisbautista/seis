<h1>Listing assessments</h1>

<table>
  <thead>
    <tr>
      <th>Installment</th>
      <th>Mode</th>
      <th>Tuition</th>
      <th>Discount</th>
      <th>Discount desc</th>
      <th>Installment number</th>
      <th>Or number</th>
      <th>Student</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assessments.each do |assessment| %>
      <tr>
        <td><%= assessment.installment %></td>
        <td><%= assessment.mode %></td>
        <td><%= assessment.tuition %></td>
        <td><%= assessment.discount %></td>
        <td><%= assessment.discount_desc %></td>
        <td><%= assessment.installment_number %></td>
        <td><%= assessment.or_number %></td>
        <td><%= assessment.student_id %></td>
        <td><%= link_to 'Show', assessment %></td>
        <td><%= link_to 'Edit', edit_assessment_path(assessment) %></td>
        <td><%= link_to 'Destroy', assessment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

