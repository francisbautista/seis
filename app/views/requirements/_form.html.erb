<div class="panel panel-default">
  <div class="panel-body">
	<%= simple_form_for(@requirement) do |f| %>
	  <%= f.error_notification %>

        <div class="row">
            <div class="col-xs-6 col-md-4">
              <div class="form-inputs">
              </div>
            </div>
            <div class="col-xs-6 col-md-4">
			  <div class="form-inputs">
			    <%= f.input :name, :label => 'Name of Requirement:' %>
			    <br>
			    <%= f.label :required, :label => 'Required?' %>
			    <%= f.input :required, label: false %>
			    <br>
			    <%= f.input :remarks, :label => 'Remarks:' %>
			  </div>
			</div>
		</div>

 		<hr>
        <div class="form-actions" align="center">
          <%= f.button :submit %>
        </div>
<% end %>
</div>
</div>