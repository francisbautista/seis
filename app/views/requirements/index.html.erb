<div class="panel panel-success">

    <div class="panel-heading">
        <h2 class="panel-title"><h3>LIST OF REQUIREMENTS</h3></h2>
    </div>
    <div class="panel-body">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Name</th>
              <th>Required</th>
              <th>Remarks</th>
              <!--<th>Status</th>-->
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @requirements.each do |requirement| %>
              <tr>
                <td><%= requirement.name %></td>
                <td><%= requirement.required %></td>
                <td><%= requirement.remarks %></td>

                    <td>
                        <div class="btn-group-sm" role="group" aria-label="..."><%= link_to "Show", requirement, :id => "open-contacts-dialog-btn",
      :class => "btn btn-info", :type => "button", :method => :get %>
                      <%= link_to "Edit", edit_requirement_path(requirement), :id => "open-contacts-dialog-btn",
                :class => "btn btn-warning",:type => "button", :method => :get %>
                <%= link_to "Delete", requirement, :id => "open-contacts-dialog-btn",
                :class => "btn btn-danger",:type => "button",method:  :delete, data: { confirm: 'Are you sure?' }%></div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

<%= link_to 'New Requirement', new_requirement_path, :class=>"btn btn-small btn-success" %>
