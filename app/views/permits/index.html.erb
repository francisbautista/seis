<h1>Listing permits</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Level</th>
      <th>Test date</th>
      <th>Release</th>
      <th>Report card</th>
      <th>Moral cert</th>
      <th>Recommendation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @permits.each do |permit| %>
      <tr>
        <td><%= permit.date %></td>
        <td><%= permit.level %></td>
        <td><%= permit.test_date %></td>
        <td><%= permit.release %></td>
        <td><%= permit.report_card %></td>
        <td><%= permit.moral_cert %></td>
        <td><%= permit.recommendation %></td>
        <td><%= link_to 'Show', permit %></td>
        <td><%= link_to 'Edit', edit_permit_path(permit) %></td>
        <td><%= link_to 'Destroy', permit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

