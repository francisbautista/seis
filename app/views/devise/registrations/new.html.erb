<h2>SIGN UP</h2>
<br>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-xs-4 in">
              <div class="form-inputs">
                <%= f.input :email, required: true, autofocus: true %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-4 in">
                <div class="form-inputs">
                <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable) %>
                <%= f.input :first_name, required: true, autofocus: true %>
              </div>
            </div>
            <div class="col-xs-4 in">
                <div class="form-inputs">
                <%= f.input :password_confirmation, required: true %>
                <%= f.input :middle_name, required: true, autofocus: true %>
              </div>
            </div>
            <div class="col-xs-4 in">
                <div class="form-inputs">
                <%= f.input :position, required: true, autofocus: true, as: :select, :collection => ['Chief-Registrar','Registrar','Accountant','Guidance Counselor', 'Cashier'] %>
                <%= f.input :last_name, required: true, autofocus: true %>
              </div>
            </div>
          </div>
           <hr>
              <div class="form-actions">
                <center><%= f.button :submit, "Sign up" %></center>
              </div>
<% end %>
</div>
</div>

<!--<%= render "devise/shared/links" %>-->
</center>
</div>
