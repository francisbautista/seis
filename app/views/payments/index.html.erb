<h1 style="color:#186636;">Listing payments for <%= @student.first_name %></h1>

<table>
  <thead>
    <tr>
      <th>Mode</th>
      <th>Installment Number</th>
      <th>OR Number</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.mode %></td>
        <td><%= payment.installment_number %></td>
        <td><%= payment.or_number %></td>
        <td><%= payment.paid_status %></td>
        <td><%= link_to 'Show', student_payments_path %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
