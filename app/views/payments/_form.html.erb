<%= simple_form_for(@payment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
      <%= f.input :mode, as: :select, :collection => ['Annual','Semi-Annual','Quarterly','Monthly'],:label => 'Mode of Payment:' %>
      <!-- Add payment type cash or check -->
    <%= f.input :testing_amount %>
    <%= f.input :reservation_amount %>
    <%= f.input :tuition_amount %>
    <%= f.input :discount_rate, input_html: { maxlength: 2 } %>
    <%= f.input :discount_desc %>
    <%= f.input :installment_number %>
    <%= f.input :or_number, input_html: { maxlength: 4 } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
