<%= simple_form_for(@payment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :mode %>
    <%= f.input :testing_amount %>
    <%= f.input :reservation_amount %>
    <%= f.input :tuition_amount %>
    <%= f.input :discount_rate %>
    <%= f.input :discount_desc %>
    <%= f.input :installment_number %>
    <%= f.input :or_number %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
