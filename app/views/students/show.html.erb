<div class="panel panel-success">
    <div class="panel-heading">
        <h3 class="panel-title"><h2>Test Permits for <%= @student.first_name %></h2></h3>
    </div>
    <% if @student.tpermits.exists? %>
    <div class="panel-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Level</th>
                    <th>Test Date</th>
                    <th>Test Number</th>
                    <th>Status</th>
                    <th>Remarks</th>
                    <th>Report Card</th>
                    <th>Moral Cert</th>
                    <th>Recommendation</th>
                    <th>Student</th>
                    <th>OR Number</th>
                    <th>Paid Status</th>
                    <th>Actions</th>
                    <th colspan="2"></th>
                </tr>
            </thead>

            <tbody>
                <% @student.tpermits.each do |tpermit| %>
                <tr>
                    <td><%= tpermit.date %></td>
                    <td><%= tpermit.level %></td>
                    <td><%= tpermit.test_date %></td>
                    <td><%= tpermit.test_number %></td>
                    <td><%= tpermit.status %></td>
                    <td><%= tpermit.remarks %></td>
                    <td><%= tpermit.report_card %></td>
                    <td><%= tpermit.moral_cert %></td>
                    <td><%= tpermit.recommendation %></td>
                    <td><%= tpermit.student_id %></td>
                    <td><%= tpermit.or_number %></td>
                    <td><%= tpermit.paid_status %></td>
                    <td><%= link_to 'Show', student_tpermit_path(@student, tpermit) %>
                    <%= link_to 'Edit', edit_student_tpermit_path(@student, tpermit) %>
                    <%= link_to 'Delete', student_tpermit_path(@student, tpermit)%></td>
                </tr>

                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
    <% else %>
    <div class="panel-body">
        <h3> No Permits Created Yet</h3>
    </div>
    <%end%>
</div>

<div class="panel panel-success">
    <div class="panel-heading">
        <h3 class="panel-title"><h2>Assessment Data for <%= @student.first_name %></h2></h3>
    </div>
    <% if @student.assessments.exists? %>
    <div class="panel-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Installment</th>
                    <th>Mode of Payment</th>
                    <th>Installment Number</th>
                    <th>OR number</th>
                    <th>Status</th>
                    <th>Actions</th>
                    <th colspan="3"></th>
                </tr>
            </thead>

            <tbody>
                <% @assessments.each do |assessment| %>
                <tr>
                    <td><%= assessment.installment %></td>
                    <td><%= assessment.mode %></td>
                    <td><%= assessment.installment_number %></td>
                    <td><%= assessment.or_number %></td>
                    <td><%= assessment.paid_status %></td>
                    <td><%= link_to 'Show', student_assessment_path(@student, assessment) %>
                    <%= link_to 'Edit', edit_student_assessment_path(@student, assessment) %>
                    <%= link_to 'Delete', student_assessment_path(@student, assessment)%></td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
    <% else %>
    <div class="panel-body">
        <h3> No Assessments Created Yet</h3>
    </div>
    <%end%>
</div>


<div class="panel panel-success">
    <div class="panel-heading">
        <h3 class="panel-title"><h2>Requirements</h2></h3>
    </div>
    <div class="panel-body">
        <% @student.student_requirements.in_groups_of(3, false).each do |s_array| %>
        <% for s in s_array %>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Required</th>
                    <th>Remarks</th>
                    <th>Status</th>
                    <th colspan="4"></th>
                </tr>
            </thead>

            <tbody>
                <tr>
                    <td><%= s.requirement.name %></td>
                    <td><%= s.requirement.required %></td>
                    <td><%= s.requirement.remarks %></td>
                    <td><%= s.status %></td>
                </tr>
            </tbody>
        </table>
        <% end %>
        <% end %>
    </div>
</div>

