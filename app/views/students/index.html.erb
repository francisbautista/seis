<%= form_tag students_path, :method => :get do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>
<div class="pull-right">
    <%= will_paginate @students %>
</div>
<div class="panel panel-success">
    <div class="panel-heading">
        <h2 class="panel-title"><h3>Student List</h3></h2>
    </div>
    <div class="panel-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID No.</th>
                    <th>First Name</th>
                    <th>Middle Name</th>
                    <th>Last Name</th>
                    <th>Batch number</th>
                    <th>Year level</th>
                    <th>Section</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% @students.each do |student| %>
                <tr>
                    <th scope="row"><%= student.id_number %></th>
                    <td><%= student.first_name %></td>
                    <td><%= student.middle_name %></td>
                    <td><%= student.last_name %></td>
                    <td><%= student.batch_number %></td>
                    <td><%= student.year_level %></td>
                    <td><%= student.section %></td>
                    <td><%= student.enrollment_status %></td>
                    <td><%= link_to 'Show', student %><hr style="margin:0;">
                        <%= link_to 'Edit', edit_student_path(student) %><hr style="margin:0;">
                        <%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>

    </div>

</div>



