<div class="panel panel-default">
  <div class="panel-body">
      <%= simple_form_for([@student, @reservation]) do |f| %>
        <%= f.error_notification %>
        <div class="row">
            <div class="col-xs-6 col-md-4">
              <div class="form-inputs">
              </div>
            </div>
            <div class="col-xs-6 col-md-4">
              <div class="form-inputs">
                <%= f.input :remarks, :label => 'Remarks:' %>
                <%= f.input :student_id, :label => 'ID Number:' %>
                <%= f.input :or_number, :label => 'OR Number:' %>                
              </div>
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-xs-6 col-md-4">
              <div class="form-inputs">
              </div>
            </div>
            <div class="col-xs-6 col-md-4">
              <div class="form-inputs">
                <%= f.input :paid_status, :label => 'Paid?' %>
              </div>
            </div>
        </div>
        <hr>
        <div class="form-actions" align="center">
          <%= f.button :submit %>
        </div>
      <% end %>
  </div>
</div>
