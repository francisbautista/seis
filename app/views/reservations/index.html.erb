<div class="panel panel-success">
    <div class="panel-heading">
        <h2 class="panel-title"><h3>Reservations</h3></h2>
    </div>
    <div class="panel-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Status</th>
                    <th>Remarks</th>
                    <th>Amount</th>
                    <th>Student</th>
                    <th>OR Number</th>
                    <th colspan="3"></th>
                </tr>
            </thead>
            <tbody>
                <% @student.reservations.each do |reservation| %>
                <tr>
                    <th scope="row"><%= reservation.student.first_name %> <%= reservation.student.last_name %></td>
                        <td><%= reservation.paid_status %></td>
                        <td><%= reservation.remarks %></td>
                        <td><%= reservation.amount %></td>
                        <td><%= reservation.student_id %></td>
                        <td><%= reservation.or_number %></td>
                    <td><%= link_to 'Show', student_reservation_path(reservation.student.id, reservation) %></td>
                </tr>
                    <% end %>
                </tbody>
            </table>

        </div>
    </div>


<br>

<%= link_to 'New Reservation', new_student_reservation_path %>
