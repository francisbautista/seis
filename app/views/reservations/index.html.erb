<h1>Listing reservations</h1>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>Remarks</th>
      <th>Amount</th>
      <th>Student</th>
      <th>Or number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @student.reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.status %></td>
        <td><%= reservation.remarks %></td>
        <td><%= reservation.amount %></td>
        <td><%= reservation.student_id %></td>
        <td><%= reservation.or_number %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Reservation', new_student_reservation_path %>
