<h1 style="color:#186636;">Listing all tests</h1>

<table>
    <thead>
        <tr>
            <th>Student</th>
            <th>Test number</th>
            <th>Pass Status</th>
            <th>Remarks</th>
            <th>Payment</th>
            <th colspan="4"></th>
        </tr>
    </thead>

    <tbody>
        <% @tests.each do |test| %>
        <tr>
            <td><%= test.student.first_name %> <%= test.student.last_name %></td>
            <td><%= test.test_number %></td>
            <td><%= test.status %></td>
            <td><%= test.remarks %></td>
            <td><%= test.paid_status %></td>

        </tr>
        <% end %>
    </tbody>
</table>

<br>
