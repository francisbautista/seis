<h1>Listing reservations</h1>

<table>
    <thead>
        <tr>
            <th>Status</th>
            <th>Remarks</th>
            <th>Amount</th>
            <th>Student</th>
            <th>Or number</th>
            <th>Payment Status</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @reservations.each do |reservation| %>
        <tr>
            <td><%= reservation.status %></td>
            <td><%= reservation.remarks %></td>
            <td><%= reservation.amount %></td>
            <td><%= reservation.student_id %></td>
            <td><%= reservation.or_number %></td>
            <td><%= reservation.paid_status %></td>
            <td><%= link_to 'Show', reservation %></td>
            <td><%= link_to 'Edit', edit_reservation_path(reservation) %></td>
            <td><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<br>
