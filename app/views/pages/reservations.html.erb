<div class="panel panel-success">
    <div class="panel-heading">
        <h2 class="panel-title"><h3>Reservations List</h3></h2>
    </div>
    <div class="panel-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Student</th>
                    <th>Remarks</th>
                    <th>Amount</th>
                    <th>OR number</th>
                    <th>Actions</th>
                    <th>Status</th>
                    <th colspan="3"></th>
                </tr>
            </thead>
            <tbody>
                <% @reservations.each do |reservation| %>
                <tr>
                    <th scope="row"><%= reservation.student.first_name %> <%= reservation.student.last_name %></td>
                        <td><%= reservation.remarks %></td>
                        <td><%= reservation.student_id %></td>
                        <td><%= reservation.or_number %></td>
                        <td><%= link_to 'Show', student_reservation_path(reservation.student.id, reservation) %>
                        <%= link_to 'Edit', edit_student_reservation_path(reservation.student.id, reservation) %></td>
                    <td><b style="text-transform: uppercase;"><%= reservation.paid_status %></b></td>
                </tr>
                    <% end %>
                </tbody>
            </table>

        </div>
    </div>


<br>
