 <h1> View Class List </h1>
 <%= form_tag classlist_path, :method => :get do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<div class="panel panel-success">
    <div class="panel-heading">
        <h2 class="panel-title"><h3>Student List</h3></h2>
    </div>
    <div class="panel-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID No.</th>
                    <th>Full Name</th>
                    <th>Gender</th>
                    <th>Section</th>
                    <th>Year level</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <% @students.each do |student| %>
                <tr>
                    <th scope="row"><%= student.id_number %></th>
                    <td><b><%= student.last_name %></b>, <%= student.first_name %> <%= student.middle_name %></td>
                    <td><%= student.gender %></td>
                    <td><%= student.section %></td>
                    <td><%= student.year_level %></td>
                    <td>
                        <% if student.enrollment_status == true %>
                            <span class="label label-success">ENROLLED</span>
                        <% else %>
                            <span class="label label-warning">WAITING</span>
                        <% end %>
                    </td>
                    </tr>
                    <% end %>
                </tbody>
            </table>

    </div>

</div>
