<div class="panel panel-default">
  <div class="panel-body">
      <%= simple_form_for([@student, @tpermit]) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :date %>
          <%= f.input :level %>
          <%= f.input :test_date %>
          <%= f.input :test_number %>
          <%= f.input :status %>
          <%= f.input :remarks %>
          <%= f.input :report_card %>
          <%= f.input :moral_cert %>
          <%= f.input :recommendation %>
          <%= f.input :student_id %>
          <%= f.input :or_number %>
          <%= f.input :paid_status %>
        </div>

        <div class="form-actions">
          <%= f.button :submit %>
        </div>
      <% end %>

  </div>
</div>
