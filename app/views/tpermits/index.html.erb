<h1>LISTING TEST PERMITS</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Level</th>
      <th>Test Date</th>
      <th>Test Number</th>
      <th>Status</th>
      <th>Remarks</th>
      <th>Report Card</th>
      <th>Moral Certificate</th>
      <th>Recommendation</th>
      <th>Student</th>
      <th>OR number</th>
      <th>Amount</th>
      <th>Paid Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tpermits.each do |tpermit| %>
      <tr>
        <td><%= tpermit.date %></td>
        <td><%= tpermit.level %></td>
        <td><%= tpermit.test_date %></td>
        <td><%= tpermit.test_number %></td>
        <td><%= tpermit.status %></td>
        <td><%= tpermit.remarks %></td>
        <td><%= tpermit.report_card %></td>
        <td><%= tpermit.moral_cert %></td>
        <td><%= tpermit.recommendation %></td>
        <td><%= tpermit.student_id %></td>
        <td><%= tpermit.or_number %></td>
        <td><%= tpermit.amount %></td>
        <td><%= tpermit.paid_status %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Test Permit', new_student_tpermit_path %>
