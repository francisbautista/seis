<h1>Listing tpermits</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Level</th>
      <th>Test date</th>
      <th>Test number</th>
      <th>Status</th>
      <th>Remarks</th>
      <th>Report card</th>
      <th>Moral cert</th>
      <th>Recommendation</th>
      <th>Student</th>
      <th>Or number</th>
      <th>Amount</th>
      <th>Paid status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tpermits.each do |tpermit| %>
      <tr>
        <td><%= tpermit.date %></td>
        <td><%= tpermit.level %></td>
        <td><%= tpermit.test_date %></td>
        <td><%= tpermit.test_number %></td>
        <td><%= tpermit.status %></td>
        <td><%= tpermit.remarks %></td>
        <td><%= tpermit.report_card %></td>
        <td><%= tpermit.moral_cert %></td>
        <td><%= tpermit.recommendation %></td>
        <td><%= tpermit.student_id %></td>
        <td><%= tpermit.or_number %></td>
        <td><%= tpermit.amount %></td>
        <td><%= tpermit.paid_status %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tpermit', new_student_tpermit_path %>
