<%= simple_form_for(@guardianship) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :parent_id, :label => 'Parent', :as => :select, :collection => Parent.all.map{|u| ["#{u.last_name}, #{u.first_name}", u.id]} %>
    <%= f.input :student_id, :label => 'Student', :as => :select, :collection => Student.all.map{|u| ["#{u.last_name}, #{u.first_name}", u.id]} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
