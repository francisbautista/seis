<h1>Listing guardianships</h1>

<table>
  <thead>
    <tr>
      <th>Payment</th>
      <th>Student</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @guardianships.each do |guardianship| %>
      <tr>
        <td><%= Parent.find(@guardianship.parent_id).first_name %>
        <%= Parent.find(@guardianship.parent_id).last_name %></td>
        <td><%= Student.find(@guardianship.student_id).first_name %>
        <%= Student.find(@guardianship.student_id).last_name %></td>
        <td><%= link_to 'Show', guardianship %></td>
        <td><%= link_to 'Edit', edit_guardianship_path(guardianship) %></td>
        <td><%= link_to 'Destroy', guardianship, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Guardianship', new_guardianship_path %>
